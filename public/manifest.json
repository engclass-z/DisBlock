{
  "name": "DisBlock",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "YouTube 動画の批判コメントの投稿主表示を任意に変更できる Chrome 拡張",
  "icons": {
    "16": "icon/icon_16.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?v=*"
      ],
      "js": [
        "js/app.js"
      ],
      "css": [
        "css/app.css"
      ]
    }
  ],
  "web_accessible_resources": [],
  "homepage_url": "https://github.com/engclass-z/disblock"
}
